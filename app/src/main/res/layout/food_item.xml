<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/recycler_bg2">


    <ImageView
        android:id="@+id/imgStoreFood"
        android:layout_width="86dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/popular1"
        android:background="@drawable/view_border_white"/>

    <TextView
        android:id="@+id/txtStoreFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Cơm gà"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imgStoreFood"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"/>


    <TextView
        android:id="@+id/txtStoreFoodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Cơm"
        android:layout_toEndOf="@id/imgStoreFood"
        android:layout_below="@id/txtStoreFoodName"/>

    <TextView
        android:id="@+id/txtStoreFoodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtStoreFoodType"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/imgStoreFood"
        android:text="10,000 VND" />

    <TextView
        android:id="@+id/txtStoreChooseFood"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Chọn"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>
