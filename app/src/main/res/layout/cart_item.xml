<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/view_border_gray"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/txtCartItemQuantity"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:background="@drawable/view_border_white"
        android:gravity="center"
        android:text="1x"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtCartItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="130dp"
        android:layout_toEndOf="@id/txtCartItemQuantity"
        android:text="Cơm chiên gà xối mỡ"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEditCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCartItemName"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/txtCartItemQuantity"
        android:text="Sửa"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCartItemTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text="15,000 VND"
        android:textSize="18sp" />

</RelativeLayout>