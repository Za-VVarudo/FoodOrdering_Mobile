<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_border_white"
    android:padding="12dp"
    android:layout_marginVertical="12dp">

    <TextView
        android:id="@+id/txtHistoryOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtHistoryPurchaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/txtHistoryOrderId"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtHistoryOrderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHistoryPurchaseDate"
        android:textSize="18sp" />

</RelativeLayout>